<div class="container-fluid">
<h2>Listado de Productos</h2>
<table>
  <tr>
    <th>Nombre Producto</th>
    <th>Precio</th>
    <th>Descripcion</th>
    <th>Actions</th>
  </tr>
  <% products.each do |product| %>
    <tr>
      <td>
        <%= product.producto %>
      </td>
      <td>
        <%= product.precio %>
      </td>
      <td>
        <%= product.descripcion %>
      </td>
      <td>
        <%= link_to 'Eliminar', product, :method => :delete %>
        <%= link_to 'Mostrar', product %>
        <%= link_to 'Editar', edit_product_path(product) %>
      </td>
    </tr>
  <% end %>
</table>
<br/>
</div>
<%= link_to 'Nuevo Producto', new_product_path %>
