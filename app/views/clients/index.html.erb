<div class="container-fluid">
<h2>Listado de Clientes</h2>
<table>
  <tr>
    <th>Nombre</th>
    <th>Documento</th>
    <th>Detalles</th>
    <th>Actions</th>
  </tr>
  <% clients.each do |client| %>
    <tr>
      <td>
        <%= client.nombres %>
      </td>
      <td>
        <%= client.documento %>
      </td>
      <td>
        <%= client.detalles %>
      </td>
      <td>
        <%= link_to 'Eliminar', client, :method => :delete %>
        <%= link_to 'Mostrar', client %>
        <%= link_to 'Editar', edit_client_path(client) %>
      </td>
    </tr>
  <% end %>
</table>
<br/>
</div>
<%= link_to 'Nuevo Cliente', new_client_path %>
