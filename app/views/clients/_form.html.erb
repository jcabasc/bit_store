<div class="container">
  <%= form_for (client), html: {class: "form-horizontal"} do |f| %>
    <% client.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :documento, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_field :documento , class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :nombres, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_field :nombres, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :detalles, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_area :detalles, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-4">
        <%= f.submit nil, class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
